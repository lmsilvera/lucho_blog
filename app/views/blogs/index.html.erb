<h1>--Lista de entradas--</h1>
<table>
  <% @blogs.each do |blog| %>
    <br>
    <div class="entrada">
      <h1><%= link_to blog['title'], blog_path(blog) %></h1>
      <p><%= blog['body'] %></p>
      <i>Autor: <%= blog['author'] %></i>
      <br>
      <%= link_to 'Editar', edit_blog_path(blog) %> | 
      <%= link_to 'Eliminar', blog, method: :delete, data: { confirm: 'Â¿Esta seguro?' } %>
    </div>
  <% end %>
</table>
<br>
<%= link_to 'Nueva entrada', new_blog_path %>